<Application x:Class="DungeonAppMaster.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DungeonAppMaster"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="MainTxb">
            <Setter Property="Text" Value="DungeonMaster"/>
            <Setter Property="Foreground" Value="Wheat"/>
            <Setter Property="FontFamily" Value="Fonts/#Robtronika"/>
            <Setter Property="FontSize" Value="45"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <Style TargetType="Button" x:Key="BtnGame">
            <Setter Property="FontFamily" Value="Fonts/#Robtronika"/>
        </Style>

        <ScaleTransform ScaleX="0.5" x:Key="StreachFontUp" />

        <Style TargetType="TextBlock" x:Key="TxtHeader">
            <Setter Property="LayoutTransform" Value="{StaticResource StreachFontUp}" />
        </Style>
    </Application.Resources>
</Application>
